<!-- Custom styles for this template -->
<link href="//getbootstrap.com/docs/4.1/examples/sign-in/signin.css" rel="stylesheet">

<form id="login-form" class="form-signin" action="?" method="post">
    <h1 class="h3 mb-3 font-weight-normal">Вход</h1>
    <label for="inputLogin" class="sr-only">Логин</label>
    <input type="text" name="login" id="inputLogin" class="form-control" placeholder="Логин" required autofocus>
    <label for="inputPassword" class="sr-only">Пароль</label>
    <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Пароль" required>
    <button class="btn btn-lg btn-primary btn-block" type="submit">Войти</button>
</form>
